<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reply_list_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/reply_list_item_outer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/reply_list_item_photo_layout"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/reply_list_item_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/defaultprofilephoto"
                android:layout_centerInParent="true"
                android:contentDescription="@string/user_photo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reply_list_item_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/reply_list_item_photo_layout">

            <RelativeLayout
                android:id="@+id/reply_list_item_name_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/reply_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/reply_list_item_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surname_text"
                    android:layout_toEndOf="@+id/reply_list_item_name"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/reply_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_time"
                    android:layout_below="@+id/reply_list_item_name"
                    android:textColor="@color/gray_color"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reply_list_item_reply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reply_list_item_name_layout">

                <TextView
                    android:id="@+id/reply_list_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black_color"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</android.support.design.card.MaterialCardView>